{
  "name": "ts-wc-starter",
  "version": "1.0.0",
  "description": "TypeScript web component starter template",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/djlauk/ts-wc-starter"
  },
  "private": true,
  "scripts": {
    "test": "mocha test/visual --timeout=10000",
    "test:regen": "npm run build && node test/visual/regen.js",
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rm -rf dist/",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:prettier": "prettier 'src/**/*.ts' --list-different || ( echo '↑↑↑  these files are not well formatted  ↑↑↑' && exit 1 )",
    "format:eslint": "eslint 'src/**/*.ts' --fix",
    "format:prettier": "prettier 'src/**/*.ts' --write",
    "generate:component": "hygen component create",
    "mypublish:pre": "npm run clean && npm run build && cp README.md package.json ./dist/",
    "mypublish": "npm run mypublish:pre && npm publish ./dist",
    "mypack": "npm run mypublish:pre && npm pack ./dist"
  },
  "author": "Daniel J. Lauk <daniel.lauk@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/puppeteer": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "browser-sync": "^2.26.7",
    "chai": "^4.2.0",
    "compression": "^1.7.4",
    "eslint": "^6.8.0",
    "express": "^4.17.1",
    "express-cache-headers": "^0.1.4",
    "express-transform-bare-module-specifiers": "^1.0.3",
    "husky": "^4.2.3",
    "hygen": "^5.0.3",
    "jsonlint": "^1.6.3",
    "lint-staged": "^10.1.1",
    "mocha": "^7.1.1",
    "pixelmatch": "^5.1.0",
    "pngjs": "^3.4.0",
    "prettier": "^2.0.2",
    "puppeteer": "^2.1.1",
    "serve-static": "^1.14.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1",
    "tslib": "^1.11.1"
  }
}
