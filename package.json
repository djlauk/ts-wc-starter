{
  "name": "ts-wc-starter",
  "version": "1.0.0",
  "description": "TypeScript web component starter template",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/djlauk/ts-wc-starter"
  },
  "private": true,
  "scripts": {
    "test": "mocha test/visual --timeout=10000",
    "test:regen": "npm run build && node test/visual/regen.js",
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rm -rf dist/",
    "deps:check": "npm-check-updates",
    "deps:update": "npm-check-updates -u && npm install",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:prettier": "prettier 'src/**/*.ts' --list-different || ( echo '↑↑↑  these files are not well formatted  ↑↑↑' && exit 1 )",
    "format:eslint": "eslint 'src/**/*.ts' --fix",
    "format:prettier": "prettier 'src/**/*.ts' --write",
    "generate:component": "hygen component create",
    "mypublish:pre": "npm run clean && npm run build && cp README.md package.json ./dist/",
    "mypublish": "npm run mypublish:pre && npm publish ./dist",
    "mypack": "npm run mypublish:pre && npm pack ./dist"
  },
  "author": "Daniel J. Lauk <daniel.lauk@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/puppeteer": "^5.4.3",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "browser-sync": "^2.26.14",
    "chai": "^4.3.4",
    "compression": "^1.7.4",
    "eslint": "^7.26.0",
    "express": "^4.17.1",
    "express-cache-headers": "^0.1.4",
    "express-transform-bare-module-specifiers": "^1.0.4",
    "husky": "^6.0.0",
    "hygen": "^6.1.0",
    "jsonlint": "^1.6.3",
    "lint-staged": "^11.0.0",
    "mocha": "^8.4.0",
    "npm-check-updates": "^11.5.11",
    "pixelmatch": "^5.2.1",
    "pngjs": "^6.0.0",
    "prettier": "^2.3.0",
    "puppeteer": "^9.1.1",
    "serve-static": "^1.14.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1",
    "tslib": "^2.2.0"
  }
}
